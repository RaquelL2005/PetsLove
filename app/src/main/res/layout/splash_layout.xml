<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">


    <TextView

        android:id="@+id/txtTextoA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto A"
        android:textColor="#7386EA"
        android:textSize="30dp"
        android:textStyle="bold"

        />

    <TextView

        android:id="@+id/txtTextoB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtTextoA"
        android:text="Texto B"
        android:textColor="#FFB0B0"
        android:textSize="30dp"
        android:textStyle="bold" />


    <TextView

        android:id="@+id/txtTextoC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTextoA"
        android:text="Texto C"
        android:textColor="#CCC39F"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/txtTextoD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTextoB"
        android:layout_toRightOf="@+id/txtTextoC"
        android:text="Texto D"
        android:textColor="#84FFFF"
        android:textSize="30dp"
        android:textStyle="bold" />


</RelativeLayout>